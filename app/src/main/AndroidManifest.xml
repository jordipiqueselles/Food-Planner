<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.jordi.alimentacio">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/icona"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".Pantalles.SettingsActivity"
            android:label="@string/title_activity_settings" />
        <activity
            android:name=".Pantalles.UserSettings"
            android:label="UserDialog" />
        <activity android:name=".Pantalles.ActivityDayMenu" />
        <activity
            android:name=".SplashActivity"
            android:theme="@style/SplashTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Pantalles.DishInfo" />
        <activity android:name=".Pantalles.FoodSupply" />
        <activity android:name=".Pantalles.ActivityMaps">
        </activity>
    </application>

</manifest>