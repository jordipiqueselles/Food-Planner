<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:gravity="center"
        android:padding="15dp"
        android:textStyle="bold"
        android:text="Breakfast"
        android:id="@+id/textEatingTime"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shape"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_weight="0.5"
            android:layout_gravity="top"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.3"
                android:scaleType="fitXY"
                android:padding="0dp"
                android:src="@drawable/menu"
                android:id="@+id/imageFirstDish"/>


        </LinearLayout>

        <!-- First dish -->

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FFEDEDED"
            android:layout_weight="0.2"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:layout_weight="0.3"
                    android:text="First dish"
                    android:textSize="20dp"
                    android:padding="10dp"
                    android:id="@+id/textFirstDish"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="0.7"
                    android:text="10 min"
                    android:textSize="10dp"
                    android:padding="10dp"
                    android:id="@+id/timeFirstDish"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:layout_weight="0.7"
                    android:layout_gravity="left"
                    android:text="info"
                    android:id="@+id/infoFirstDish"/>

            </LinearLayout>

            <!-- Second dish -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:orientation="horizontal"
                android:background="#FFEDEDED">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:layout_weight="0.3"
                    android:textSize="20dp"
                    android:text="Second dish"
                    android:padding="10dp"
                    android:id="@+id/textSecondDish"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="0.7"
                    android:text="10 min"
                    android:textSize="10dp"
                    android:padding="10dp"
                    android:id="@+id/timeSecondDish"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:layout_weight="0.7"
                    android:layout_gravity="left"
                    android:text="info"
                    android:id="@+id/infoSecondDish"/>

            </LinearLayout>

            <!-- Third dish -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.2"
                android:orientation="horizontal"
                android:background="#FFEDEDED">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="left"
                    android:layout_weight="0.3"
                    android:textSize="20dp"
                    android:text="Third dish"
                    android:padding="10dp"
                    android:id="@+id/textThirdDish"/>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:layout_weight="0.7"
                    android:text="10 min"
                    android:textSize="10dp"
                    android:padding="10dp"
                    android:id="@+id/timeThirdDish"/>

                <Button
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="10dp"
                    android:layout_weight="0.7"
                    android:layout_gravity="left"
                    android:text="info"
                    android:id="@+id/infoThirdDish"/>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>